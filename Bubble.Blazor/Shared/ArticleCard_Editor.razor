<MudCard Style="margin:10px; padding: 10px">
    <MudCardContent>
        <MudGrid>
            <MudItem xs=12>
                <MudText Typo=Typo.h6>@ArticleDetails.Title</MudText>
            </MudItem>
            <MudItem xs=9>
                <MudText Typo="Typo.body2">@ArticleDetails.ShortDesc</MudText>
            </MudItem>
            <MudItem xs=3>
                <MudGrid>
                    <MudItem xs=6>
                        <MudText Align=Align.Right>Дата:</MudText>
                    </MudItem>
                    <MudItem xs=6>
                        <MudText Align=Align.Left>@ArticleDetails.PublishDate.ToString("dd/MM/yy")</MudText>
                    </MudItem>
                    <MudItem xs=6>
                        <MudText Align=Align.Right>Источник:</MudText>
                    </MudItem>
                    <MudItem Style="padding:5px" xs=6>
                        <MudChip Variant="Variant.Text" Color="Color.Secondary">@ArticleDetails.Source</MudChip>
                    </MudItem>
                    <MudItem xs=6>
                        <MudText Align=Align.Right>Рейтинг:</MudText>
                    </MudItem>
                    <MudItem xs=6>
                        <MudText Align=Align.Left>@goodnessRating</MudText>
                    </MudItem>
                    <MudItem xs=6>
                        <MudText Align=Align.Right>Одобрено:</MudText>
                    </MudItem>
                    <MudItem xs=6>
                        <MudText Align=Align.Left>@approved</MudText>
                    </MudItem>
                </MudGrid>
            </MudItem>
        </MudGrid>
    </MudCardContent>
    <MudCardActions>
        <a href="articleEdit/@ArticleDetails.Id">
            <MudButton Variant="Variant.Text" Color="Color.Primary">Перейти к статье</MudButton>
        </a>
        @if (ArticleDetails.Approved)
        {
            <MudButton OnClick=ChangeArticleApproval Variant="Variant.Text" Color="Color.Primary">Спрятать</MudButton>
        } 
        else
        {
            <MudButton OnClick=ChangeArticleApproval Variant="Variant.Text" Color="Color.Primary">Одобрить</MudButton>
        }
        <MudButton OnClick=DeleteArticle Variant="Variant.Text" Color="Color.Primary">Удалить</MudButton>
    </MudCardActions>
</MudCard>